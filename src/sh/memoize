#!/usr/bin/env sh

validity="$1"
shift

tmp=$(mktemp /tmp/.memoize_XXXXXXXXXX)

for a in "$@" ; do
	echo "$a" >> "$tmp"
done

cache="$HOME/.cache/memoize/$(sha1sum "$tmp" | head -c 40)"

O="$cache""/O"
E="$cache""/E"
R="$cache""/R"
T="$cache""/T"

now=$(date +%s)
if [ -e "$O" ]; then
	previous=$(cat "$T")
	x=`expr $previous + $validity - $now`
else
	mkdir -p "$cache"
	x=-1
fi

if test $x -lt 0; then
	eval "$@" 1>"$O" 2>"$E"
	echo "$?" > "$R"
	echo "$now" > "$T"
fi

rm "$tmp"

cat "$O"
cat "$E" >&2
exit $(cat "$R")
